<AdicionarVendedorPage>:     #class name
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.png"
                
        LabelButton:
            pos_hint: {"right": 0.9, "top": 0.8}
            size_hint: 0.8, 0.1
            bold: True
            text: "Insira o  [color=#00CFDB]ID de outro Vendedor[/color] para acompanh√°-lo"
            markup: True
        LabelButton:
            canvas.before:      
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"
            on_release: app.adicionar_vendedor(input_id_outrovendedor.text)
            text: "Acompanhar Vendedor"
            pos_hint: {"right":0.9, "top": 0.55}
            size_hint: 0.8, 0.2
        TextInput:
            pos_hint: {"right": 0.9, "top": 0.7}
            size_hint: 0.8, 0.1
            id: input_id_outrovendedor
        
        Label:
            text: ""
            markup: True
            bold: True
            pos_hint: {"right":0.9, "top": 0.4}
            size_hint: 0.8, 0.1
            id: mensagem_outrovendedor        
        # Return Button
        ImageButton:
            pos_hint: {"right": 0.2, "top": 0.12}
            size_hint: 0.33, 0.12
            source: "icones/voltar.png"
            on_release: app.mudar_tela("ajustespages")